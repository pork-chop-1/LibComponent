{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "composite": false
  },
  "include": ["docs/**/*"],
  "exclude": ["node_modules"]
}
